<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
      <!-- hibernate mapping file -->
<hibernate-mapping>
	<class name="Product" table="products">
		<id name="productId" column="pid">
			<generator class="assigned" />

		</id>
		<timestamp name="ts" column="transaction_time"></timestamp>
		<!-- <version name="v" column="version"></version> -->
		<property name="productName" column="pname" length="10"></property>
		<property name="productPrice"></property>
		
	</class>

</hibernate-mapping>

